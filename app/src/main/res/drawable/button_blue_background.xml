<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <layer-list>
            <item android:bottom="@dimen/padding_4dp" android:left="@dimen/padding_4dp"
                  android:right="@dimen/padding_4dp" android:top="@dimen/padding_4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/padding_4dp"/>
                    <padding android:bottom="@dimen/padding_8dp" android:left="@dimen/padding_8dp"
                             android:right="@dimen/padding_8dp" android:top="@dimen/padding_8dp"/>
                    <size android:width="@dimen/size_300dp" android:height="@dimen/size_48dp"/>
                    <solid android:color="#ffdedede"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item android:bottom="@dimen/padding_4dp" android:left="@dimen/padding_4dp"
                  android:right="@dimen/padding_4dp" android:top="@dimen/padding_4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/padding_4dp"/>
                    <padding android:bottom="@dimen/padding_8dp" android:left="@dimen/padding_8dp"
                             android:right="@dimen/padding_8dp" android:top="@dimen/padding_8dp"/>
                    <size android:width="@dimen/size_300dp" android:height="@dimen/size_48dp"/>
                    <solid android:color="#70b0f4"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:bottom="@dimen/padding_4dp" android:left="@dimen/padding_4dp"
                  android:right="@dimen/padding_4dp" android:top="@dimen/padding_4dp">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/padding_4dp"/>
                    <size android:width="@dimen/size_300dp" android:height="@dimen/size_48dp"/>
                    <solid android:color="#75B8FF"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>