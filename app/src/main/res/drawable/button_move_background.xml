<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <layer-list>
            <item android:bottom="@dimen/padding_4dp" android:left="@dimen/padding_4dp"
                  android:right="@dimen/padding_4dp" android:top="@dimen/padding_4dp">
                <shape>
                    <corners android:radius="@dimen/padding_4dp"/>
                    <size android:width="@dimen/size_64dp" android:height="@dimen/size_40dp"/>
                    <solid android:color="#ffdedede"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item android:bottom="@dimen/padding_4dp" android:left="@dimen/padding_4dp"
                  android:right="@dimen/padding_4dp" android:top="@dimen/padding_4dp">
                <shape>
                    <corners android:radius="@dimen/padding_4dp"/>
                    <size android:width="@dimen/size_64dp" android:height="@dimen/size_40dp"/>
                    <solid android:color="#ffb74a02"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:bottom="@dimen/padding_4dp" android:left="@dimen/padding_4dp"
                  android:right="@dimen/padding_4dp" android:top="@dimen/padding_4dp">
                <shape>
                    <corners android:radius="@dimen/padding_4dp"/>
                    <size android:width="@dimen/size_64dp" android:height="@dimen/size_48dp"/>
                    <solid android:color="#ffd75702"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>