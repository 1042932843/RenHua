<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/padding_4dp"/>
                    <solid android:color="#ffdedede"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/padding_4dp"/>
                    <solid android:color="#3794d9"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/padding_4dp"/>
                    <solid android:color="#3EA4EF"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>