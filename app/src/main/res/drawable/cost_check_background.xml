<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:bottom="@dimen/padding_4dp" android:left="@dimen/padding_4dp"
                  android:right="@dimen/padding_4dp" android:top="@dimen/padding_4dp">
                <shape>
                    <corners android:radius="@dimen/padding_4dp"/>
                    <padding android:bottom="@dimen/padding_8dp" android:left="@dimen/padding_8dp"
                             android:right="@dimen/padding_8dp" android:top="@dimen/padding_8dp"/>
                    <size android:width="@dimen/size_64dp" android:height="@dimen/size_48dp"/>
                    <solid android:color="#ffffffff"/>
                    <stroke android:width="1dp" android:color="#ff02b0ec"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item android:bottom="@dimen/padding_4dp" android:left="@dimen/padding_4dp"
                  android:right="@dimen/padding_4dp" android:top="@dimen/padding_4dp">
                <shape>
                    <corners android:radius="@dimen/padding_4dp"/>
                    <padding android:bottom="@dimen/padding_8dp" android:left="@dimen/padding_8dp"
                             android:right="@dimen/padding_8dp" android:top="@dimen/padding_8dp"/>
                    <size android:width="@dimen/size_96dp" android:height="@dimen/size_48dp"/>
                    <solid android:color="#ffffffff"/>
                    <stroke android:width="1px" android:color="#ff02b0ec"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:bottom="@dimen/padding_4dp" android:left="@dimen/padding_4dp"
                  android:right="@dimen/padding_4dp" android:top="@dimen/padding_4dp">
                <shape>
                    <corners android:radius="@dimen/padding_4dp"/>
                    <padding android:bottom="@dimen/padding_8dp" android:left="@dimen/padding_8dp"
                             android:right="@dimen/padding_8dp" android:top="@dimen/padding_8dp"/>
                    <size android:width="@dimen/size_96dp" android:height="@dimen/size_48dp"/>
                    <solid android:color="#ffe0e0e0"/>
                    <stroke android:width="1px" android:color="#ffcdcdcd"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>