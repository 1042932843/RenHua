<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item android:bottom="@dimen/padding_4dp" android:left="@dimen/padding_4dp"
                android:right="@dimen/padding_4dp" android:top="@dimen/padding_4dp">
                <shape>
                    <corners android:radius="@dimen/padding_4dp"/>
                    <padding android:bottom="@dimen/padding_8dp" android:left="@dimen/padding_8dp"
                        android:right="@dimen/padding_8dp" android:top="@dimen/padding_8dp"/>
                    <size android:width="96dp" android:height="@dimen/size_48dp"/>
                    <stroke android:width="1dip" android:color="#30A7E9" />
                    <solid android:color="#30A7E9" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="true">
        <layer-list>
            <item android:bottom="@dimen/padding_4dp" android:left="@dimen/padding_4dp" android:right="@dimen/padding_4dp" android:top="@dimen/padding_4dp">
                <shape>
                    <corners android:radius="@dimen/padding_4dp" />
                    <padding android:bottom="@dimen/padding_8dp" android:left="@dimen/padding_8dp" android:right="@dimen/padding_8dp" android:top="@dimen/padding_8dp" />
                    <size android:width="96dp" android:height="@dimen/size_48dp" />
                    <stroke android:width="1dip" android:color="#30A7E9" />
                    <solid android:color="#30A7E9" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:bottom="@dimen/padding_4dp" android:left="@dimen/padding_4dp"
                android:right="@dimen/padding_4dp" android:top="@dimen/padding_4dp">
                <shape>
                    <corners android:radius="@dimen/padding_4dp"/>
                    <padding android:bottom="@dimen/padding_8dp" android:left="@dimen/padding_8dp"
                        android:right="@dimen/padding_8dp" android:top="@dimen/padding_8dp"/>
                    <size android:width="96dp" android:height="@dimen/size_48dp"/>
                    <solid android:color="@color/windowBackground"/>
                    <stroke android:width="1dp" android:color="@color/windowBackground"/>
                    <corners android:radius="5dip" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>