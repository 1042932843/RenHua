<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="@dimen/padding_small"
                android:bottomRightRadius="@dimen/padding_small"
                android:topRightRadius="@dimen/padding_small"
                android:bottomLeftRadius="@dimen/padding_small"/>
            <solid android:color="#c0cccccc"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/windowBackground"/>
                </shape>
            </item>

            <item android:bottom="3dp" android:left="1dp" android:right="1dp">
                <shape>
                    <solid android:color="@color/colorF"/>
                </shape>
            </item>
        </layer-list>
    </item>


    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/colorD"/>
                </shape>
            </item>

            <item android:bottom="1dp" android:right="@dimen/size_1dp">
                <shape>
                    <solid android:color="@color/colorF"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>