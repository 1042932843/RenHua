    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding_6dp"
            android:layout_marginTop="@dimen/padding_20dp"
            android:layout_marginLeft="@dimen/padding_10dp"
            android:layout_marginRight="@dimen/padding_10dp"
            android:background="#ffffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="业务类型："
                    android:textColor="@color/color0"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/question_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color0"
                    android:textSize="@dimen/font_16dp" />

            </LinearLayout>

            <View
                style="@style/Divider"
                android:layout_height="1px"
                android:background="@color/color0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_4dp"
                android:layout_marginTop="@dimen/padding_8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="问题主题："
                    android:textColor="@color/color3"
                    android:textSize="@dimen/font_16dp" />

                <TextView
                    android:id="@+id/consult_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color3"
                    android:textSize="@dimen/font_16dp"
                    android:paddingLeft="6dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="问题内容："
                    android:textColor="@color/color3"
                    android:textSize="@dimen/font_16dp" />

                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color3"
                    android:textSize="@dimen/font_16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp"
                android:layout_marginBottom="@dimen/padding_10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="回复内容："
                    android:textColor="@color/color3"
                    android:textSize="@dimen/font_16dp"
                    android:id="@+id/textView" />

                <TextView
                    android:id="@+id/reply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color3"
                    android:textSize="@dimen/font_14dp" />

                <!--<com.example.administrator.renhua.ui.view.AppWebView-->
                    <!--android:id="@+id/reply"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_marginTop="@dimen/padding_6dp">-->

                <!--</com.example.administrator.renhua.ui.view.AppWebView>-->
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>
