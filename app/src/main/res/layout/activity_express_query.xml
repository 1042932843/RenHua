<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout style="@style/Header">

        <ImageButton
            android:id="@+id/back"
            style="@style/HeaderBack"/>

        <TextView
            style="@style/HeaderTitle"
            android:text="快递查询"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_10dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="快递公司："
            android:padding="@dimen/padding_6dp"
            android:textColor="@color/color6"
            android:textSize="@dimen/font_16dp"/>

        <Button
            android:id="@+id/express"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请选择快递公司"
            android:textColor="@color/colorA"
            android:textColorHint="@color/color6"
            android:gravity="left|center"
            android:textSize="@dimen/font_14dp"
            android:paddingLeft="@dimen/padding_20dp"
            android:drawableRight="@mipmap/ic_dropdown"
            android:paddingRight="@dimen/padding_12dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="@dimen/padding_10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="运单号："
            android:padding="@dimen/padding_6dp"
            android:textColor="@color/color6"
            android:textSize="@dimen/font_16dp"/>

        <EditText
            android:id="@+id/express_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入正确的运单编号"
            android:textColorHint="@color/colorA"
            android:gravity="left|center"
            android:textSize="@dimen/font_14dp"
            android:paddingLeft="@dimen/padding_20dp"
            android:drawableRight="@mipmap/ic_dropdown"
            android:paddingRight="@dimen/padding_12dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="@dimen/padding_10dp"
            android:textColor="@color/color6"
            android:maxLength="20"
            android:singleLine="true"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"/>

        <Button
            android:layout_marginTop="@dimen/padding_10dp"
            android:id="@+id/query"
            style="@style/Button"
            android:text="查询"/>
    </LinearLayout>

</LinearLayout>
