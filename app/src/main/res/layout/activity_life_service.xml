<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <FrameLayout style="@style/Header">

        <ImageButton
            android:id="@+id/back"
            style="@style/HeaderBack"/>

        <TextView
            style="@style/HeaderTitle"
            android:text="生活服务" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_20dp"
            android:paddingRight="@dimen/padding_20dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/phone"
                style="@style/HomeTextItem"
                android:drawableTop="@mipmap/phone_cost"
                android:text="手机充值" />

            <TextView
                android:id="@+id/hospital"
                style="@style/HomeTextItem"
                android:drawableTop="@mipmap/hospital"
                android:text="医院挂号" />

            <TextView
                android:id="@+id/bus"
                style="@style/HomeTextItem"
                android:drawableTop="@mipmap/bus_ticket"
                android:text="汽车购票" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_20dp"
            android:paddingRight="@dimen/padding_20dp"
            android:paddingBottom="15dp">

            <!--<TextView-->
                <!--android:id="@+id/water"-->
                <!--style="@style/HomeTextItem"-->
                <!--android:drawableTop="@mipmap/water"-->
                <!--android:text="水费缴纳" />-->

            <TextView
                android:id="@+id/fa_lv_yuan_zhu"
                style="@style/HomeTextItem"
                android:drawableTop="@mipmap/fa_lv_yuan_zhu"
                android:text="法律咨询" />

            <TextView
                android:id="@+id/electric_charge"
                style="@style/HomeTextItem"
                android:drawableTop="@mipmap/dian_fei"
                android:text="电费缴纳" />

            <TextView
                android:id="@+id/traffic"
                style="@style/HomeTextItem"
                android:drawableTop="@mipmap/traffic"
                android:text="违章查询" />

            <!--<TextView-->
                <!--android:id="@+id/gas"-->
                <!--style="@style/HomeTextItem"-->
                <!--android:drawableTop="@mipmap/gas"-->
                <!--android:text="燃气费缴纳" />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_20dp"
            android:paddingRight="@dimen/padding_20dp"
            android:paddingBottom="@dimen/padding_20dp">

            <!--<TextView-->
                <!--android:id="@+id/special_travel"-->
                <!--style="@style/HomeTextItem"-->
                <!--android:drawableTop="@mipmap/special_travel"-->
                <!--android:text="特色旅游" />-->
            <TextView
                android:id="@+id/appliance_repair"
                style="@style/HomeTextItem"
                android:drawableTop="@mipmap/ic_appliance_repair"
                android:text="家电维修"/>

            <TextView
                android:id="@+id/express"
                style="@style/HomeTextItem"
                android:drawableTop="@mipmap/kuai_di"
                android:text="快递查询"/>

            <TextView
                android:id="@+id/health"
                style="@style/HomeTextItem"
                android:text="卫生计生"
                android:drawableTop="@mipmap/health"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_20dp"
            android:paddingRight="@dimen/padding_20dp"
            android:paddingBottom="@dimen/padding_20dp">
            <TextView
                android:id="@+id/zhi_wu_shi_bie"
                style="@style/HomeTextItem"
                android:drawableTop="@mipmap/plant1"
                android:text="植物识别" />

            <TextView
                style="@style/HomeTextItem"
                android:id="@+id/textView2" />

            <TextView
                style="@style/HomeTextItem"
                 />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
