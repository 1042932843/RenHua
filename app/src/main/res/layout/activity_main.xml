<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.example.administrator.renhua.ui.view.NoScrollViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:background="#fff3f3f3"/>

    <LinearLayout
        android:id="@+id/navbar"
        style="@style/NavBar">

        <CheckBox
            android:id="@+id/navHome"
            style="@style/NavBarItem"
            android:checked="true"
           android:background="@drawable/nav_home_background"
            android:drawableTop="@mipmap/ic_nav_home"
            android:text="首页"/>

        <CheckBox
            android:id="@+id/navProgress"
            style="@style/NavBarItem"
            android:drawableTop="@mipmap/ic_nav_progress"
            android:background="@drawable/nav_home_background"
            android:text="进度查询"/>

        <CheckBox
            android:id="@+id/navUser"
            style="@style/NavBarItem"
            android:background="@drawable/nav_home_background"
            android:drawableTop="@mipmap/ic_nav_user"
            android:text="个人中心"/>

    </LinearLayout>

</LinearLayout>