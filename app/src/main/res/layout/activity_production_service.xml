<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout style="@style/Header">

        <ImageButton
            android:id="@+id/back"
            style="@style/HeaderBack"/>

        <TextView
            android:id="@+id/navbar_title"
            style="@style/HeaderTitle"
            android:layout_width="210dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="生产服务"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_20dp"
            android:paddingRight="@dimen/padding_20dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/sen_fang"
                style="@style/HomeTextItem"
                android:drawableTop="@mipmap/sen_fang"
                android:text="森防信息发布" />

            <TextView
                android:id="@+id/ting_shui_ting_dian"
                style="@style/HomeTextItem"
                android:drawableTop="@mipmap/ting_shui_ting_dian"
                android:text="停水停电预告" />

            <TextView
                android:id="@+id/bing_chong_hai"
                style="@style/HomeTextItem"
                android:drawableTop="@mipmap/bing_chong_hai"
                android:text="农业病虫害预防" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_20dp"
            android:paddingRight="@dimen/padding_20dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/rou_cai"
                style="@style/HomeTextItem"
                android:drawableTop="@mipmap/rou_cai"
                android:text="市场肉菜价格" />

            <TextView
                android:id="@+id/xun_qing"
                style="@style/HomeTextItem"
                android:drawableTop="@mipmap/xun_qing"
                android:text="汛情信息发布" />

            <TextView
                android:id="@+id/di_zhi_zai_hai"
                style="@style/HomeTextItem"
                android:drawableTop="@mipmap/di_zhi_zai_hai"
                android:text="地质灾害测报" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_20dp"
            android:paddingRight="@dimen/padding_20dp"
            android:paddingBottom="@dimen/padding_20dp">

            <TextView
                android:id="@+id/nong_ji_zhi_shi"
                style="@style/HomeTextItem"
                android:drawableTop="@mipmap/nong_ji_zhi_shi"
                android:text="农技知识推广" />

            <TextView
                android:id="@+id/policy_farmer"
                style="@style/HomeTextItem"
                android:drawableTop="@mipmap/policy_farmer"
                android:text="惠农政策"/>

            <TextView
                android:id="@+id/farmer_insurance"
                style="@style/HomeTextItem"
                android:drawableTop="@mipmap/farmer_insurance"
                android:text="政策性农业保险" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_20dp"
            android:paddingRight="@dimen/padding_20dp"
            android:paddingBottom="@dimen/padding_20dp">

            <TextView
                android:id="@+id/ren_cai_zhao_pin"
                style="@style/HomeTextItem"
                android:drawableTop="@mipmap/ren_cai_zhao_pin"
                android:text="人才招聘" />



            <TextView
                style="@style/HomeTextItem" />

            <TextView
                style="@style/HomeTextItem" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
