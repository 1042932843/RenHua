<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/colorF">

    <FrameLayout style="@style/Header">

        <ImageView
            android:id="@+id/back"
            style="@style/HeaderBack"/>

        <TextView
            style="@style/HeaderTitle"
            android:text="进度查询" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_16dp"
        android:paddingRight="@dimen/padding_16dp"
        android:paddingTop="@dimen/padding_20dp"
        android:visibility="gone">

        <TextView
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="事项名称" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:hint="请输入事项关键字"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textSize="@dimen/font_16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_16dp"
        android:paddingRight="@dimen/padding_16dp"
        android:layout_marginBottom="@dimen/padding_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="流水号："
            style="@style/Text"/>

        <EditText
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入流水号"
            android:background="@drawable/edit_text_background"
            android:textSize="@dimen/font_16dp"
            android:paddingLeft="15dp"
            android:singleLine="true"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_16dp"
        android:paddingRight="@dimen/padding_16dp"
        android:layout_marginBottom="@dimen/padding_10dp">

        <TextView
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码：" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


        <EditText
            android:id="@+id/randcode"
            android:layout_width="150dp"
            android:background="@drawable/edit_text_background"
            android:layout_height="@dimen/size_40dp"
            android:gravity="center"
            android:hint="请输入验证码"
            android:inputType="text"
            />

        <ImageView
            android:id="@+id/randCode_image"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@+id/randcode"
            android:layout_toRightOf="@+id/randcode" />
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/search_progress"
        android:layout_margin="12dp"
        style="@style/Button"
        android:text="查 询"/>

</LinearLayout>
