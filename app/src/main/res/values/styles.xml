<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    <!--</style>-->

    <style name="_AppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="AppTheme" parent="_AppTheme">
        <!--<item name="android:windowBackground">@color/bgF0</item>-->
        <item name="android:dropDownListViewStyle">@style/dropDownListViewStyle</item>
        <item name="colorPrimaryDark">@color/windowBackground</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="dropDownListViewStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">#ffcccccc</item>
        <item name="android:dividerHeight">1px</item>
    </style>

    <style name="FullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="NavBar">
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="NavBarItem">
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/font_12dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawablePadding">@dimen/padding_4dp</item>
        <item name="android:padding">@dimen/padding_4dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/colorF</item>
    </style>

    <style name="Header">
        <item name="android:background">#4267C0</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_48dp</item>
    </style>

    <style name="HeaderBack">
        <item name="android:background">@drawable/menu_background</item>
        <item name="android:src">@mipmap/ic_action_back</item>
        <item name="android:paddingLeft">@dimen/padding_12dp</item>
        <item name="android:paddingRight">@dimen/padding_12dp</item>
        <item name="android:layout_width">@dimen/size_48dp</item>
        <item name="android:layout_height">@dimen/size_48dp</item>
    </style>

    <style name="HeaderTitle">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/font_18dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HeaderMenu">
        <item name="android:layout_gravity">right</item>
        <item name="android:background">@drawable/menu_background</item>
        <item name="android:layout_width">@dimen/size_48dp</item>
        <item name="android:layout_height">@dimen/size_48dp</item>
    </style>

    <style name="HeaderMenu.Text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_16dp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="HomeText1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@mipmap/wihte_bg2</item>
        <item name="android:textSize">@dimen/font_16dp</item>
        <item name="android:textColor">@color/color3</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/padding_10dp</item>
        <item name="android:padding">25dp</item>
    </style>

    <style name="HomeText2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:background">@mipmap/wihte_bg1</item>
        <item name="android:textSize">@dimen/font_16dp</item>
        <item name="android:textColor">@color/color3</item>
        <item name="android:paddingLeft">70dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="Text">
        <item name="android:textSize">@dimen/font_16dp</item>
        <item name="android:textColor">@color/color3</item>
    </style>

    <style name="TextWhite">
        <item name="android:textSize">@dimen/font_18dp</item>
        <item name="android:textColor">@color/colorF</item>
    </style>

    <style name="Button">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">@dimen/font_18dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonYellow">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">@dimen/font_18dp</item>
        <item name="android:background">@drawable/button_yellow_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_marginRight">@dimen/padding_8dp</item>
        <item name="android:layout_marginLeft">@dimen/padding_8dp</item>
    </style>

    <style name="ButtonBlue">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">@dimen/font_18dp</item>
        <item name="android:background">@drawable/button_blue_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_marginRight">@dimen/padding_8dp</item>
        <item name="android:layout_marginLeft">@dimen/padding_8dp</item>
    </style>

    <style name="CodeButton">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">@dimen/font_14dp</item>
        <item name="android:background">@drawable/code_button_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RegisterEditText">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">@dimen/font_16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColorHint">#B1CDE9</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/colorD</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_1px</item>
    </style>

    <style name="ListView">
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:dividerHeight">@dimen/size_1px</item>
        <item name="android:listSelector">#00000000</item>
        <item name="android:divider">#ffcccccc</item>
    </style>

    <style name="CostCheckButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/cost_check_text_color</item>
        <item name="android:background">@drawable/phone_cost_item</item>
    </style>

    <style name="ExpressCheckButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/colorF</item>
        <item name="android:background">@drawable/express_item</item>
    </style>

    <style name="TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding_4dp</item>
        <item name="android:textSize">@dimen/font_16dp</item>
        <!--<item name="android:textColor">#000000</item>-->
    </style>

    <style name="FromEditText">
        <item name="android:paddingRight">@dimen/padding_12dp</item>
        <item name="android:paddingTop">@dimen/padding_12dp</item>
        <item name="android:paddingBottom">@dimen/padding_12dp</item>
        <item name="android:paddingLeft">80dp</item>
        <item name="android:textSize">@dimen/font_16dp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:background">#ffffffff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/size_48dp</item>
        <item name="android:textColor">@color/color6</item>
        <item name="android:textColorHint">@color/colorC</item>
    </style>

    <style name="FromTextView" parent="TextView">
        <item name="android:textSize">@dimen/font_16dp</item>
        <item name="android:padding">@dimen/padding_12dp</item>
        <item name="android:layout_width">@dimen/size_128dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/color6</item>
    </style>
    <style name="AppToolBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/windowBackground</item>
    </style>

    <style name="HomeTextItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textSize">@dimen/font_14dp</item>
        <item name="android:textColor">#333333</item>
    </style>

</resources>
